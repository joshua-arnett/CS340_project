<h1>Customers</h1>

{{! READ table }}
<table>
    <thead>
        {{! For the table header row, we print the DB attribute names }}
        <tr>
            {{#each customers.[0]}}
            <th>
                {{@key}}
            </th>
            {{/each}}
            <th></th>
        </tr>
    </thead>

    <tbody>
        {{! For each row, print the id, name, description, cost, and stock amount }}
        {{#each customers}}
        <tr>
            <td>{{this.customerID}}</td>
            <td>{{this.customerName}}</td>
            <td>{{this.customerAddress}}</td>
            <td>{{this.customerPhone}}</td>

            {{! DELETE form }}
            <form id='delete_toy_form'>
                <input type='hidden' name='delete_toy_id' value='{{this.customerID}}' />
                <input type='hidden' name='delete_toy_name' value='{{this.customerName}}' />
                <td>
                    <button type='submit'>
                        Delete
                    </button>
                </td>
            </form>
        </tr>
        {{/each}}
    </tbody>
</table>


{{! UPDATE form }}
<h2>Update a Customer</h2>
<form class='cForm' id='update_customer_form'>
    <label for='update_customer_id'>Customer to Update: </label>
    <select name='update_customer_id' id='update_customer_id' required>
        <option value='' disabled selected>Select a Customer</option>
        {{#each customers}}
        <option value='{{this.customerID}}' required>
            {{this.customerID}}
            -
            {{this.customerName}}
        </option>
        {{/each}}
    </select>

    <label for='update_customer_address'>Address: </label>
    <input type="text" id="update_customer_address" name="update_customer_address" placeholder="Enter address here" />


    <label for='update_customer_Phone'>Phone: </label>
    <input type="text" id="update_customer_Phone" name="update_customer_Phone" placeholder="Enter phone here" />


    <input type='submit' />
</form>

